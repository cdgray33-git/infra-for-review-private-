FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Use your current Dockerfile location and naming:
# Example for agent-ui/backend Dockerfile
COPY agent-ui/backend/main.py /app/main.py
COPY agent-ui/backend/agent-ui_backend_main_Version2.py /app/agent-ui_backend_main_Version2.py

EXPOSE 80

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "80", "--ws", "websockets"]
